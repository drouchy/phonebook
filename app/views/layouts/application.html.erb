<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Phonebook</title>
  <meta name="description" content="Single user phonebook application">
  <meta name="author" content="David Rouchy <drouchy@gmail.com>">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico">

  <%= stylesheet_link_tag :all, 'token-input' %>
  <%= javascript_include_tag :defaults, 'jquery.tokeninput' %>
  <%= csrf_meta_tag %>

</head>

<body>

  <div id="container">
    <header id="banner" class="body"> 
		  <h1><a href="/">Phonebook!</a></h1> 
		  <nav><ul> 
			<li class="<%= 'active' if is_current_controller?('home') %>"><a href="/">home</a></li> 
  			<li class="<%= 'active' if is_current_controller?('contacts') %>"><%= link_to "Contacts", contacts_path %></li> 
	  		<li class="<%= 'active' if is_current_controller?('companies') %>"><%= link_to "Companies", companies_path %></a></li> 
	  		<li class="<%= 'active' if is_current_controller?('contact_me') %>"><a href="#">contact me</a></li> 
  		</ul></nav> 
	  </header>

    <div id="main" role="main">
      <aside id="featured" class="body">
        <%= yield %>
      </aside>
    </div>
    
    <footer id="contentinfo" class="body"> 
      <p>Template based on <a href="http://www.smashingmagazine.com/2009/08/04/designing-a-html-5-layout-from-scratch">Smashing Magazine</a>.</p> 
  	</footer>
  </div> 

  <!--[if lt IE 7 ]>
    <script src="js/dd_belatedpng.js"></script>
    <script>DD_belatedPNG.fix("img, .png_bg"); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
  <![endif]-->

</body>
</html>
